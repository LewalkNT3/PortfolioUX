                  <a href="#" class="text-gray-300 text-sm"><Link /></a>
                  <a href="#" class="text-gray-300 text-sm"><Github /></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Función para cerrar todos los modales
  function closeAllModals() {
    const modals = ["projectModal", "projectModal2", "projectModal3"];
    modals.forEach((modalId) => {
      document.getElementById(modalId)?.classList.add("hidden");
    });
  }

  // Función para cerrar todos los drawers y overlays
  function closeAllDrawers() {
    const drawers = ["projectDrawer", "projectDrawer2", "projectDrawer3"];
    const overlays = ["drawerOverlay", "drawerOverlay2", "drawerOverlay3"];

    drawers.forEach((drawerId) => {
      const drawer = document.getElementById(drawerId);
      if (drawer) {
        drawer.classList.add("translate-y-full");
        drawer.classList.remove("translate-y-0");
      }
    });

    overlays.forEach((overlayId) => {
      document.getElementById(overlayId)?.classList.add("hidden");
    });
  }

  // Modificar los onclick de los botones de proyecto
  document.querySelectorAll("[data-project]").forEach((button) => {
    button.addEventListener("click", (e) => {
      const modalId = button.getAttribute("data-project");
      if (modalId) {
        closeAllModals();
        closeAllDrawers();
        document.getElementById(modalId)?.classList.remove("hidden");
      }
    });
  });

  // Modificar los onclick de los botones de drawer
  document.querySelectorAll("[data-drawer]").forEach((button) => {
    button.addEventListener("click", (e) => {
      const drawerId = button.getAttribute("data-drawer");
      const overlayId = button.getAttribute("data-overlay");
      if (drawerId && overlayId) {
        closeAllDrawers();
        const drawer = document.getElementById(drawerId);
        const overlay = document.getElementById(overlayId);
        if (drawer && overlay) {
          drawer.classList.remove("translate-y-full");
          drawer.classList.add("translate-y-0");
          overlay.classList.remove("hidden");
        }
      }
    });
  });

  // Modificar los onclick de los botones de cierre
  document.querySelectorAll("[data-close-modal]").forEach((button) => {
    button.addEventListener("click", (e) => {
      const modalId = button.getAttribute("data-close-modal");
      if (modalId) {
        document.getElementById(modalId)?.classList.add("hidden");
        closeAllDrawers();
      }
    });
  });

  // Modificar los onclick de los botones de cierre de drawer
  document.querySelectorAll("[data-close-drawer]").forEach((button) => {
    button.addEventListener("click", (e) => {
      const drawerId = button.getAttribute("data-close-drawer");
      const overlayId = button.getAttribute("data-close-overlay");
      if (drawerId && overlayId) {
        const drawer = document.getElementById(drawerId);
        const overlay = document.getElementById(overlayId);
        if (drawer && overlay) {
          drawer.classList.add("translate-y-full");
          drawer.classList.remove("translate-y-0");
          overlay.classList.add("hidden");
        }
      }
    });
  });

  // Cerrar drawers al hacer clic en el overlay
  document.querySelectorAll("[data-close-overlay]").forEach((overlay) => {
    overlay.addEventListener("click", (e) => {
      const drawerId = overlay
        .getAttribute("data-close-overlay")
        ?.replace("drawerOverlay", "projectDrawer");
      if (drawerId) {
        const drawer = document.getElementById(drawerId);
        if (drawer) {
          drawer.classList.add("translate-y-full");
          drawer.classList.remove("translate-y-0");
          overlay.classList.add("hidden");
        }
      }
    });
  });
</script>
